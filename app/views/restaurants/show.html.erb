<%= render "navbar" %>

<h2><%= @restaurant.name %></h2>
<p><strong>Adress</strong>: <%= @restaurant.address %></p>
<p><strong>Phone number</strong>: <%= @restaurant.phone_number %></p>
<p><strong>Category</strong>: <%= @restaurant.category %></p>

<p><strong>Reviews</strong>:</p>
<ul class="list-group">
  <% @restaurant.reviews.each do |review| %>
    <li class="list-group-item">
    <%= review.rating %> /5 :
    <%= review.content %>
    </li>
  <% end %>
</ul>
<%= link_to 'Add a review', new_restaurant_review_path(@restaurant), class: "btn btn-primary" %>

<%= link_to 'Back to the list', restaurants_path, class: "btn btn-primary" %>
